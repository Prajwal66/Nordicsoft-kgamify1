<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/fixed_layout_champ"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/borader"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_champ_name"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Master Python for Beginners - Syntax and Theory"
                android:textColor="@color/category"
                android:textSize="8dp"></TextView>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_person"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_champ_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_participent"></ImageView>

                <ImageView
                    android:id="@+id/img_coin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_champ_name"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/kcoin"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_person"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="0 Participants"
                    android:textColor="@color/subcategory"
                    android:textSize="7dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_coin"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="1000 Total Coins"
                    android:textColor="@color/subcategory"
                    android:textSize="6dp"></TextView>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_person"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Qualification: Any"
                android:textColor="@color/category"
                android:textSize="8dp"></TextView>


            <TextView
                android:id="@+id/tv_champ_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_qualification"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_condensed_light"
                android:text="Start Time: 30 Oct 2021 | 00:00 IST"
                android:textColor="@color/subcategory"
                android:textSize="5dp"></TextView>


            <TextView
                android:id="@+id/tv_champ_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_champ_start_time"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_condensed_light"
                android:text="End Time: 30 May 2022 | 00:00 IST"
                android:textColor="@color/subcategory"
                android:textSize="5dp"></TextView>

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:onClick="ShowPopup3"
            android:src="@drawable/ic_more_info"></ImageView>
    </LinearLayout>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>