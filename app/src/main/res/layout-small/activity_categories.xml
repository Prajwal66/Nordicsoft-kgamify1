<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sidemenu"
        android:layout_width="24dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/sidemenu" />


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="88dp"
        android:layout_height="16dp"
        android:background="@drawable/box2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toEndOf="@+id/sidemenu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017"></SearchView>

    <TextView
        android:id="@+id/serachcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Select Category"
        android:textColor="@color/heading_orange"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="0.01999998" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/serachcategory"
        app:layout_constraintVertical_bias="0.133">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--card1-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/box2"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="@+id/scrollView1"
                app:layout_constraintVertical_bias="0.01999998">

                <LinearLayout
                    android:id="@+id/fixed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/box2"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:text="Aeronautics / Aerospace"
                            android:textColor="@color/category"
                            android:textSize="8sp" />


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:text="2 Championships"
                            android:textColor="@color/subcategory"
                            android:textSize="6sp" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/expand_more"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/ic_baseline_expand_more_24" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--card1 child or expandview-->
            <LinearLayout
                android:id="@+id/hidden_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/category1"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borader"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/champs"
                            android:layout_width="102dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:text="Master Python for Beginners - Syntax and Theory"
                            android:textColor="@color/category"
                            android:textSize="8dp"></TextView>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/person1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@id/champs"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/ic_participent"></ImageView>

                            <ImageView
                                android:id="@+id/coin1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@id/champs"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/kcoin"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/person1"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/roboto_condensed_regular"
                                android:text="0 Participants"
                                android:textSize="7dp"
                                android:textColor="@color/subcategory"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/coin1"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/roboto_condensed_regular"
                                android:text="1000 Total Coins"
                                android:textSize="6dp"
                                android:textColor="@color/subcategory"></TextView>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/quali"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/person1"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:text="Qualification: Any"
                            android:textColor="@color/category"
                            android:textSize="8dp"></TextView>


                        <TextView
                            android:id="@+id/starttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quali"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="Start Time: 30 Oct 2021 | 00:00 IST"
                            android:textColor="@color/subcategory"
                            android:textSize="5dp"></TextView>


                        <TextView
                            android:id="@+id/endtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/starttime"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="End Time: 30 May 2022 | 00:00 IST"
                            android:textColor="@color/subcategory"
                            android:textSize="5dp"></TextView>

                    </LinearLayout>

                    <ImageView
                        android:onClick="ShowPopupinfo"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/ic_more_info"></ImageView>
                </LinearLayout>

                <!--card1 expand category 2-->

                <LinearLayout
                    android:id="@+id/category2"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borader"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/java"
                            android:layout_width="102dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:text="Master Java for Beginners - Syntax and Theory"
                            android:textColor="@color/category"
                            android:textSize="8dp"></TextView>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/person2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/ic_participent"></ImageView>

                            <ImageView
                                android:id="@+id/coin2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/kcoin"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/person1"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/roboto_condensed_regular"
                                android:text="0 Participants"
                                android:textSize="7dp"
                                android:textColor="@color/subcategory"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/coin1"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/roboto_condensed_regular"
                                android:text="1000 Total Coins"
                                android:textSize="6dp"
                                android:textColor="@color/subcategory"></TextView>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/quali1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/person1"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:text="Qualification: Any"
                            android:textColor="@color/category"
                            android:textSize="8dp"></TextView>


                        <TextView
                            android:id="@+id/starttime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quali"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="Start Time: 30 Oct 2021 | 00:00 IST"
                            android:textColor="@color/subcategory"
                            android:textSize="5dp"></TextView>


                        <TextView
                            android:id="@+id/endtime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/starttime"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="End Time: 30 May 2022 | 00:00 IST"
                            android:textColor="@color/subcategory"
                            android:textSize="5dp"></TextView>

                    </LinearLayout>

                    <ImageView
                        android:onClick="ShowPopupinfo"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/ic_more_info"></ImageView>
                </LinearLayout>


            </LinearLayout>


            <!--card2-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/box2"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="@+id/scrollView1"
                app:layout_constraintVertical_bias="0.01999998">

                <LinearLayout
                    android:id="@+id/fixed_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/box2"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:text="Information Technology"
                            android:textColor="@color/category"
                            android:textSize="8sp" />


                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:text="1 Championships"
                            android:textColor="@color/subcategory"
                            android:textSize="6sp" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/expand_more1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/ic_baseline_expand_more_24" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--card2 expand category 1-->

            <LinearLayout
                android:id="@+id/hidden_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <!--card2 expand category 3-->
                <LinearLayout
                    android:id="@+id/category3"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borader"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dsa"
                            android:layout_width="102dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:text="Master DSA for Beginners - Syntax and Theory"
                            android:textColor="@color/category"
                            android:textSize="8dp"></TextView>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/person3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/ic_participent"></ImageView>

                            <ImageView
                                android:id="@+id/coin3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/kcoin"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/person1"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/roboto_condensed_regular"
                                android:text="0 Participants"
                                android:textSize="7dp"
                                android:textColor="@color/subcategory"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/coin1"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/roboto_condensed_regular"
                                android:text="1000 Total Coins"
                                android:textSize="6dp"
                                android:textColor="@color/subcategory"></TextView>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/quali2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/person1"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:text="Qualification: Any"
                            android:textColor="@color/category"
                            android:textSize="8dp"></TextView>


                        <TextView
                            android:id="@+id/starttime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quali"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="Start Time: 30 Oct 2021 | 00:00 IST"
                            android:textColor="@color/subcategory"
                            android:textSize="5dp"></TextView>


                        <TextView
                            android:id="@+id/endtime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/starttime"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="End Time: 30 May 2022 | 00:00 IST"
                            android:textColor="@color/subcategory"
                            android:textSize="5dp"></TextView>

                    </LinearLayout>

                    <ImageView
                        android:onClick="ShowPopupinfo"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/ic_more_info"></ImageView>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="23dp" />


</androidx.constraintlayout.widget.ConstraintLayout>